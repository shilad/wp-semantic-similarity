{
    // The concept mapper that maps phrases to articles
    "mappers" : {
        "main" : {
            "type" : "dictionary",
            "indexName" : "main",
            "dir" : "dat/dictionary.pruned"
        },
//        "lucene" : {
//            "type" : "lucene",
//            "indexName" : "esa"
//        }
    },

    "indexes" : {
        "inputDir" : "dat/wikipedia",
        "outputDir" : "dat/lucene",
        "main" : {
            "type" : "fields",
            "fields" : ["id", "title", "type", "dab", "redirect", "ninlinks"],
            "booster" : {
                "type" : "inlink",
                "pow" : 0.5,
                "logs" : 3
            }
        },
        "text" : {
            "type" : "fields",
            "fields" : ["text", "id", "title", "ninlinks"],
            "booster" : {
                "type" : "inlink",
                "pow" : 0.5,
                "logs" : 3
            }
        },
        "links" : {
            "type" : "fields",
            "fields" : ["links", "id", "title", "ninlinks", "inlinks"],
            "booster" : {
                "type" : "inlink",
                "pow" : 0.5,
                "logs" : 3
            }
        },
        "cats" : {
            "type" : "fields",
            "fields" : ["cats", "id", "title", "ninlinks", "ns"],
            "namespaces" : [0, 14],
            "booster" : {
                "type" : "inlink",
                "pow" : 0.5,
                "logs" : 3
            }
        },
        "esa" : {
            "type" : "fields",
            "fields" : ["text", "id", "title", "links", "ninlinks"],
            "minLinks" : 10,
            "minWords" : 300,
            "titleMultiplier" : 4,
            "addInLinksToText" : true,
            "similarity" : "ESA",
            "analyzer" : "ESA",
            "booster" : {
                "type" : "inlink",
                "logs" : 2
            },
            "mostSimilarFilter" : {
                "minInLinks" : 50
            }
        }
    },

    // The similarity metrics
    "metrics" : {
        "article-cats" : {
            "type" : "category",
            "lucene" : "cats",
        },
        "esa" : {
            "type" : "esa",
            "lucene" : "esa",
            "textLucene" : "text",
        },
        "article-text" : {
            "type" : "text",
            "field" : "text",
            "maxPercentage" : 10,
            "minTermFreq" : 2,
            "minDocFreq" : 6,
            "lucene" : "text",
        },
        "article-links" : {
            "type" : "text",
            "field" : "links",
            "maxPercentage" : 10,
            "minTermFreq" : 1,
            "minDocFreq" : 2,
            "lucene" : "links",
        },
        "outlinks" : {
            "type" : "links",
            "field" : "links",
            "lucene" : "links",
            "similarity" : "lucene"
        },
        "inlinks" : {
            "type" : "links",
            "field" : "inlinks",
            "lucene" : "links",
            "similarity" : "lucene"
        },
        "pairwise-esa" : {
            "type" : "pairwise",
            "matrix" : "dat/esa-sims.matrix",
            "basedOn" : "esa",
            "transpose" : "dat/esa-sims.transpose.matrix",
            "buildPhraseVectors" : true,
        },
        "pairwise-text" : {
            "type" : "pairwise",
            "matrix" : "dat/text-sims.matrix",
            "basedOn" : "article-text",
            "transpose" : "dat/text-sims.transpose.matrix",
            "buildPhraseVectors" : true,
        },
        "pairwise-links" : {
            "type" : "pairwise",
            "matrix" : "dat/link-sims.matrix",
            "basedOn" : "article-links",
            "transpose" : "dat/link-sims.transpose.matrix",
        },
        "pairwise-cats" : {
            "type" : "pairwise",
            "matrix" : "dat/cat-sims.matrix",
            "basedOn" : "article-cats",
            "transpose" : "dat/cat-sims.transpose.matrix",
        },
        "ensemble" : {
            "model" : "dat/model.out",
            "type" : "ensemble",
            "minComponents" : 2
        },
    }
}
